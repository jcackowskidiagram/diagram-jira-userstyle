@-moz-document domain("wsoljira.atlassian.net") {
    #page-body > #content {
        padding: 0 1rem;
    }

    .issue-link-key {
        background-color: #0000000f;
    }

    .adg3 .details-layout .split-view .simple-issue-list .list-panel .issue-list li.focused a {
        outline: 2px solid #333;
        border-radius: 3px;
    }

    .splitview-issue-link img[title*='Sub-Task'] {
        padding-left: 0;
        opacity: 0.25;
    }

