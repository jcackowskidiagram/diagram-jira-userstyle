@-moz-document domain("wsoljira.atlassian.net") {
    color-custom-darkgrey = rgb(97, 97, 124);
    color-custom-green = hsl(120deg, 100%, 35%);

    scrollbar() {
        &::-webkit-scrollbar {
            width: 0.75rem;
        }

        &::-webkit-scrollbar-track {
            background-color: rgba(color-custom-darkgrey, 0.3);
            border-radius: 1rem;
            overflow: hidden;
        }

        &::-webkit-scrollbar-thumb {
            // border-radius: $border-radius-small;
            background-color: rgba(color-custom-darkgrey, 0.8);
            border-radius: 1rem;
            overflow: hidden;
        }
    }

    * {
        scrollbar();
    }

    #page-body > #content {
        padding: 0 0.5rem;
    }

    #jira-frontend {
        #ak-side-navigation {
            nav {
                >div:last-child {
                    display: none;
                }

                >div:first-child {
                    border-bottom: 1px solid rgba(color-custom-darkgrey, 0.5);
                    box-shadow: 0 0 5px rgba(color-custom-darkgrey, 1);
                    margin-bottom: 0.25rem;
                    margin-left: 0;

                    div[data-navheader] {
                        padding: 0.25rem;
                    }
                }
            }
        }
    }

    #ak-main-content {
        div[data-testid='rapidboard-breadcrumbs'] {
            padding: 0.5rem 1rem;
            height: auto;
            margin: 0 0 0.5rem 0;
            box-shadow: 0 0 0.25rem rgba(0, 0, 0, 0.25);
        }
    }

    .ghx-agile #content {
        margin-left: 1rem;
    }

    .issue-list {
        li {
            border-bottom: none !important;
        }
    }

    .issue-link-key {
        background-color: rgba(color-custom-darkgrey, 0.16);
    }

    .ghx-backlog-container {
        .ghx-backlog-header {
            border-width: 0 0 1px 0;
            border-color: rgba(color-custom-darkgrey, 0.25);
            border-style: solid;
            background-color: rgba(color-custom-darkgrey, 0.05);
        }
    }

    .adg3 {
        .ghx-backlog-container {
            border-width: 1px 0 0 3px;
            border-style: solid;
            border-color: rgba(color-custom-darkgrey, 0.25);
        }

        .ghx-sprint-group {
            .ghx-backlog-container {
                border-left-color: color-custom-green;

                .ghx-backlog-header {
                    background-color: rgba(color-custom-green, 0.05);
                }

                ~ .ghx-backlog-container {
                    border-color: rgba(color-custom-darkgrey, 0.25);

                    .ghx-backlog-header {
                        background-color: rgba(color-custom-darkgrey, 0.05);
                    }
                }
            }
        }

        // style the backlog with a dashed boarder
        .ghx-backlog-group {
            .ghx-backlog-container {
                border-style: dashed;
            }
        }

        &.bento-enabled {
            #ghx-backlog {
                padding-right: 2px;
            }
        }

        .navigator-group {
            padding: 0;
        }

        .details-layout {
            .split-view {
                .simple-issue-list {
                    .issue-link-key {
                        color: #fff;
                    }

                    .list-panel .issue-list li.focused a {
                        outline: 2px solid #333;
                        border-radius: 3px;
                    }
                }
            }
        }
    }

    .splitview-issue-link img[title*='Sub-Task'] {
        padding-left: 0;
        opacity: 0.25;
    }

    [data-component-selector='jira.issue-view.issue-details.full-size-mode-column'] {
        padding: 0 1rem 0 0.5rem;
    }
}